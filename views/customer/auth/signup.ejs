<%- include('../../shared/includes/head', {pageTitle: 'Signup' }) %>
  <link rel="stylesheet" href="/styles/auth.css">
  <link rel="stylesheet" href="/styles/form.css">
  </head>

  <body>
    <%- include('../../shared/includes/header') %>
      <main>
        <h1>Create New Account</h1>
        <form action="/signup" method="POST">
          <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>" />
          <div>
            <label for="email">Email</label>
            <input value="" name="email" type="email" required />
          </div>
          <div>
            <label for="confirmEmail">Confirm Email</label>
            <input value="" name="confirmEmail" type="email" required />
          </div>
          <div>
            <label for="password">Password</label>
            <input value="" name="password" type="password" required minLength="6" />
          </div>
          <hr>
          <div>
            <label for="fullname">Full Name</label>
            <input value="" name="fullname" type="text" required />
          </div>
          <div>
            <label for="street">Street</label>
            <input value="" name="street" type="text" required />
          </div>
          <div>
            <label for="postal">Postal Code</label>
            <input value="" name="postal" type="text" required minlength="5" maxlength="5" />
          </div>
          <div>
            <label for="city">City</label>
            <input value="" name="city" type="text" required />
          </div>
          <button class="btn">Create Account</button>
          <p id="switch-form"><a href="/login">Go to Login</a></p>
        </form>
      </main>
      <%- include('../../shared/includes/footer') %>
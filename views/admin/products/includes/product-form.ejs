<form action="<%= submitPath %>?_csrf=<%= locals.csrfToken %>" method="POST" enctype="multipart/form-data">
  <p>
    <label for="title">Title</label>
    <input id="title" name="title" value="<%= product.title %>" required type="text">
  </p>
  <p>
    <label for="image">Image</label>
    <input id="image" name="image" accept="image/png, image/jpg" type="file" <% if(imageRequired) { %>required<% } %>/>
  </p>
  <p>
    <label for="summary">Summary</label>
    <input id="summary" name="summary" value="<%= product.summary %>" required type="text" maxlength="200">
  </p>
  <p>
    <label for="price">Price</label>
    <input id="price" name="price" value="<%= product.price %>" required type="number" min="0.01" step="0.01">
  </p>
  <p>
    <label for="description">Description</label>
    <textarea name="description" id="description" rows="10" required><%= product.description %></textarea>
  </p>
  <p>
    <button type="reset" class="btn btn-alt">Reset</button>
    <button class="btn">Save</button>
  </p>
</form>